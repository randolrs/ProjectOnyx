<%= render 'predictors/editnavside' %>

<div class = "edit-container">

  <div class="edit-panel">

  	<h2>Payee Information</h2>

		<%= form_tag accounts_update_path do %>   

			<table>
				<tr>
					<td><span>Payee Type</span> </td>
					<td><select name="payeeType">
		                <option value="Ind">Individual</option>
		                <option value="Bus">Business</option>
		            	</select>
		        	</td>
				</tr>
				<tr>
					<td><span>First Name</span></td>
					<td><input type="text" size="20" name="firstName" placeholder=<%=@firstname%>></td>
				</tr>
				<tr>
					<td><span>Last Name</span></td>
					<td><input type="text" size="20" name="lastName" placeholder=<%=@lastname%>></td>
				</tr>
				<tr>
					<td><span>DOB</span></td>
					<td><input type="date" name="dob" placeholder=<%=@dob%>></td>
				</tr>
				<tr>
					<td> </td>
					<td> </td>
				</tr>
			</table>

		    <button type="submit" class="signup-submit">Update</button>
		<%end%>

	</div>
</div>
