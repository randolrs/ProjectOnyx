<div class="user-dashboard-header"%>

  <% if user_signed_in?%>

  <h3><%= current_user.username %></h3>

  <table class="user-dashboard-summary">
    <tr>
      <td class="ud-margin">Following</td>
      <td class="ud-margin">Subscriptions</td>
      <td class="ud-margin">Active Predictions</td>
    </tr>

    <tr>
      <td class="ud-margin"><%=@myPurchases.count%></td>
      <td class="ud-margin"><%=@myPurchases.where(:premium=>true).count%></td>
      <td class="ud-margin"><%=@predictions.count%></td>
    </tr>

    </table>

  <%end%>

</div>




