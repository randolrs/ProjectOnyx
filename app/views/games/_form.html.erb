<% if admin_signed_in? %>

<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :league %><br>
    <%= collection_select(:game, :league, Sport.all, :subcat, :subcat) %>
  </div>

  <div class="field">
    <%= f.label :teamh %><br>
    <%= collection_select(:game, :teamh, Team.all, :name, :name) %>
  </div>

  <div class="field">
    <%= f.label :teama %><br>
    <%= collection_select(:game, :teama, Team.all, :name, :name) %>
  </div>

  <div class="field">
    <%= f.label :event_time %><br>
    <%= f.datetime_select :event_time %>
  </div>

  <div class="field">
    <%= f.label :teama_score %><br>
    <%= f.number_field :teama_score %>
  </div>

  <div class="field">
    <%= f.label :teamh_score %><br>
    <%= f.number_field :teamh_score %>
  </div>

  <% if @game.teamh != nil && @game.teama != nil %>

    <div class="field">
      <%= f.label :game_winner %><br>
      <%= f.select :game_winner, [[@game.teama,@game.teama],[@game.teamh,@game.teamh]], :prompt => "Select the Game Winner" %>
    </div>

  <% end %>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, [['Open','o'],['Closed','c']], :placeholder => @game.status %>
  </div>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% end %>