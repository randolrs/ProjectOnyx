      <div class="game-table-holder">

      <h1>Select a Game</h1>

        <%= render 'games/gamecategoryheader' %>

        <table class ="prediction-index-fold table table-hover">
          <thead>
          <tr>        
            <th class="prediction-index-fold-th">Matchup</th>
            <th class="prediction-index-fold-th">Date</th>
            <th class="prediction-index-fold-th">Time</th>

            <% if user_signed_in? %>
              <th class="prediction-index-fold-th">Total Predictions</th>
            <%end%>

            <th class="prediction-index-fold-th"></th>
            
          </tr>
          </thead>


          <% @games.each do |game| %>

              <% if game.event_time > Time.now and game.status ="o" and PredictionGame.all.where(:game_id => game.id).count > 0 %>

                  <tbody>
                  
                  <tr class="prediction-table-row" href="/">
                      <td><%= game.teama + " at " + game.teamh %></td>
                      <td> <%= game.event_time.strftime("%D") %></td>
                      <td><%= game.event_time.strftime("%l:%M %p") %></td>
                      
                      <% if user_signed_in? %>
                        <td><%= PredictionGame.all.where(:game_id => game.id).count %></td>
                        <td><%= link_to "See All Predictions", find_sports_predictions_path(params[:league],game.id) %></td>

                      <%elsif predictor_signed_in?%>

                        <td><%= link_to "Make a Prediciton", newpredictiongame_path(game.id), class: "make_prediction_cta" %></td>

                      <%end%>
                      
                    </div>
                  </tr>

                  </tbody>

              <% end %>

          <% end %>

              </table>
      </div>


<% else %>

