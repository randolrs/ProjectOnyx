<h1>Select Game to Predict</h1>

<table>
  <thead>
    <tr>
      <th>Teamh</th>
      <th>Teama</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      
      <% if game.event_time > Time.now %>
      <tr>
        <td><%= game.league %></td>
        <td><%= game.teamh %></td>
        <td><%= game.teama %></td>
        <td><%= game.event_time %></td>

        <td><%= link_to 'Make Prediction', new_prediction_game_path(:game => game.id) %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Score', gamescore_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% end %>


    <% end %>
  </tbody>
</table>

<br>