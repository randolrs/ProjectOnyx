	</div>

	<div class="article-index-dashboard">
		<%# render 'predictors/predictorarticlesummary'%>
	</div>
	

	<div class ="prediction-title-header">
		<h3>Recent Picks</h3>
		<h5><%= link_to "Full Archive »", gamepredictionindex_path %></h5>

		<%= render 'games/gamepredictionsummary'%>
	</div>

	<nav>
		<div class="center">
			<%# will_paginate @predictions, renderer: BootstrapPagination::Rails %>
		</div>
