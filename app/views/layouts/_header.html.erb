<div class="header-container">

  <div class="header-inside">

    <div class="header-inside-left">

      <ul class = "header-ul">

        <a href="/" class="logo-text">
          Futable
        </a>
        
      </ul>

  </div>
    
<!--   <div class="header-inside-middle">
    XX
  </div> -->

  <div class="header-inside-right">

    <ul class = "header-ul">

    <% if user_signed_in? %>

      <li class="dropdown header-li">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Find Experts<span class="caret white-caret"></span></a>

        <ul class="dropdown-menu" role="menu">      
          <li><%= link_to "NBA", leaguehome_path("NBA"), class: "header-category" %></li>
          <li><%= link_to "NFL", leaguehome_path("NFL"), class: "header-category" %></li>
          <li><%= link_to "NHL", leaguehome_path("NHL"), class: "header-category" %></li>
          <li><%= link_to "MLB", leaguehome_path("MLB"), class: "header-category" %></li>
        </ul>
      </li>

        <li class="dropdown header-li">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><% if current_user.username %><%= current_user.username %><%else%>Guest<%end%><span class="caret white-caret" color="white"></span></a>

            <ul class="dropdown-menu" role="menu">                
              <li><%= link_to "Account Settings", edit_user_registration_path %></li>
              <li><%= link_to "Feedback/Support", home_path %></li>
              <li role="presentation" class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>

    <% elsif predictor_signed_in? %>

      <li class="header-li"><%= link_to "My Profile", predictordashboard_path(current_predictor.username), class: "header-right-list" %></li>

      <li class="header-li"><%= link_to "Make a Prediction", sportsgamesselect_path(current_predictor.username, "predictions"), class: "header-right-list" %></li>

      <li class="dropdown header-li">
        <a href="#" class="dropdown-toggle header-right-list" data-toggle="dropdown" role="button" aria-expanded="false"><% if current_predictor.image %><%= image_tag current_predictor.image.url(:thumb), class: "image-header"%><%end%><% if current_predictor.username %><%= current_predictor.username %><%else%>Guest<%end%></a>

      <ul class="dropdown-menu" role="menu">
          <!-- <li><a href= <%# predictordashboard_path(current_predictor.username) %>>Profile <span class="badge"><%# current_predictor.prediction_games.count %></span></a></li> -->

          <li><%= link_to "Account Settings", edit_predictor_registration_path %></li>
          <li><%= link_to "Logout", destroy_predictor_session_path, method: :delete %></li>
      </ul>
    </li>


    <% elsif admin_signed_in? %>

      <%= link_to "Dashboard", dashboard_path %>

      <%= link_to "Predictors", predictoradminindex_path %>

      <%= link_to "SportsDash", sportdashboard_path %>

      <%= link_to "Editor", editor_path %>

      <%= link_to "Account Settings", edit_admin_registration_path %>

      <%= link_to "Logout", destroy_admin_session_path, method: :delete %>
    

    <% else %>

      <li class="header-li"><%= link_to "Find Experts", findexperts_path("ALL") %></li>

      <%= link_to "Signup", new_user_registration_path %>

      <%= link_to "Login", new_user_session_path %>

      <%= link_to "Become an Expert", new_user_registration_path, class: "signup-header" %>

    <% end %>

    </ul>

</div>

</div>

  



</div>