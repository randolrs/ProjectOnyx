<!doctype html>
<html lang=''>
<head>
   <meta charset='utf-8'>
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <link rel="stylesheet" href="styles.css">
   <script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
   <script src="script.js"></script>
   <title>CSS MenuMaker</title>
</head>

<header>
   <script>
      $( document ).ready(function() {
      $('#cssmenu').prepend('<div id="menu-button">Futable</div>');
         $('#cssmenu #menu-button').on('click', function(){
            var menu = $(this).next('ul');
            if (menu.hasClass('open')) {
               menu.removeClass('open');
            }
            else {
               menu.addClass('open');
            }
         });
      });
   </script>
</header>

<body>

<div id='cssmenu'>
<ul>
   <li><a href='<%=root_path%>'><span>Futable</span></a></li>
   <% unless predictor_signed_in? %>
      <li class='has-sub'><a href='#'><span>Browse</span></a>
         <ul>
            <li class='has-sub'><a href='#'><span>Sports</span></a>
               <ul>
                  <li><a href='<%=leaguehome_path("NBA")%>'><span>NBA</span></a></li>
                  <li><a href='<%=leaguehome_path("NFL")%>'><span>NFL</span></a></li>
                  <li><a href='<%=leaguehome_path("MLB")%>'><span>MLB</span></a></li>
                  <li><a href='<%=leaguehome_path("NHL")%>'><span>NHL</span></a></li>
               </ul>
            </li>
            <li class='has-sub'><a href='#'><span>Finance</span></a>
               <ul>
                  <li><a href='<%=leaguehome_path("NBA")%>'><span>Stocks Markets</span></a></li>
                  <li><a href='<%=leaguehome_path("NFL")%>'><span>Currencies</span></a></li>
                  <li><a href='<%=leaguehome_path("NFL")%>'><span>Commodities</span></a></li>
                  <li><a href='<%=leaguehome_path("NFL")%>'><span>Bonds</span></a></li>
                  <li><a href='<%=leaguehome_path("NFL")%>'><span>Corporate Earnings</span></a></li>
               </ul>
            </li>
            <li class='has-sub'><a href='#'><span>Economics</span></a>
               <ul>
                  <li><a href='<%=prediction_economies_index_path("GDP")%>'><span>GDP</span></a></li>
                  <li><a href='<%=prediction_economies_index_path("Employment")%>'><span>Employment</span></a></li>
               </ul>
            </li>
         </ul>
      </li>
   <%end%>

   <%if user_signed_in?%>
      
      <li class='has-sub right'><a href='#'><span><%= current_user.email %></span></a>
         <ul>
            <li><a href='<%=edit_user_registration_path%>'><span>Account Information</span></a>
               <li><a href='<%=payments_path%>'><span>Payment Information</span></a>
            <li><a href='<%=root_path%>'><span>Feedback/Support</span></a>
            <li><a data-method="delete" href='<%=destroy_user_session_path%>'><span>Logout</span></a>
         </ul>
      </li>

   <%elsif predictor_signed_in?%>

      <li class="right" class='active has-sub'><a href='#'><span><%= current_predictor.username %></span></a>
         <ul>
            <li><a href='<%=edit_predictor_registration_path%>'><span>Account Settings</span></a>
            <li><a href='<%=root_path%>'><span>Feedback/Support</span></a>
            <li><a data-method="delete" href='<%=destroy_predictor_session_path%>'><span>Logout</span></a>
         </ul>
      </li>  

      <li class="right"><a href='<%=sportsgamesselect_path(current_predictor.username, "predictions")%>'><span>Make a Prediction</span></a></li>

      <li class="right"><a href='<%=predictordashboard_path(current_predictor.username)%>'><span>My Profile</span></a></li>  

   <%elsif admin_signed_in?%>  

      <li class="right"><%= link_to "Logout", destroy_admin_session_path, method: :delete %></li>

      <li class="right"><%= link_to "Editor", editor_path %></li>

      <li class="right"><%= link_to "SportsDash", sportdashboard_path %></li>

      <li class="right"><%= link_to "Predictors", predictoradminindex_path %></li>

      <li class="right"><%= link_to "Dashboard", dashboard_path %></li>

      <li class="right"><%= link_to "Plans", plans_path %></li>


   <%else%>

      <li class="right"><a class="signup-header" href='<%=new_predictor_registration_path%>'><span>Become an Expert</span></a></li>
      <li class="right"><a href='<%=new_user_session_path%>'><span>Login</span></a></li>
      <li class="right"><a href='<%=new_user_registration_path%>'><span>Sign up</span></a></li>

   <%end%>

</ul>
</div>

</body>
<html>
