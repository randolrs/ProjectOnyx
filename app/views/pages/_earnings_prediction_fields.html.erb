
<div class="home-forecast-form">

  <%= f.hidden_field :_destroy %>
  <%= link_to "+", '#', class: "remove_fields cancel-prediction" %>

  <table class="forecast-form-table">
    <tr>
      <td></td>
      <td>Quarter</td>
      <td>Year</td>
      <td>EPS Forecast</td>
    </tr>

    <tr>

      <td><span><%= f.text_field :company, placeholder: "Company", autofocus: false, class: "forecast_company_text"%></span></td>

      <td>
          <span>
    
            <select class="forecast_quarter_select">

              <option value="" disabled selected>Q</option>
              <option value="Q1">Q1</option>
              <option value="Q2">Q2</option>
              <option value="Q3">Q3</option>
              <option value="Q4">Q4</option>

            </select>

          </span>

      </td>

      <td>

          <span>

            <select class="forecast_year_select">
      
              <option value="" disabled selected>Year</option>
              <option value="2016">2016</option>
              <option value="2017">2017</option>
              <option value="2018">2018</option>
              <option value="2019">2019</option>

            </select>

          </span>

      </td>

      <td>
        
        <span><%= f.number_field :eps_estimate, placeholder: "$0.00", autofocus: false, class: "forecast_eps_estimate_number" %></span>

      </td>
    </tr>

  </table>
  

  <a class ="prediction-save-button">Save</a>

</div>
