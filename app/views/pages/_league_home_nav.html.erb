<div class = "user-dashboard-prediction-nav">

	<ul class="dashboard-prediction-nav">
		
		<%unless @action == "upcoming" or @action=="top" %>
			<li class="active"><%= link_to "Recent Predictions", leaguehome_path(@league) %></li>
		<%else%>
			<li><%= link_to "Recent Predictions", root_path %></li>
		<%end%>

		<%if @action == "upcoming"%>
			<li class="active"><%= link_to "Upcoming Games", leaguehome_path(@league, :sort_by=>"upcoming") %></li>
		<%else%>
			<li><%= link_to "Upcoming Games", leaguehome_path(@league, :sort_by=>"upcoming") %></li>
		<%end%>

		<%if @action == "top"%>
			<li class="active"><%= link_to "Top Experts", root_path(:sort_by=>"top") %></li>
		<%else%>
			<li><%= link_to "Top Experts", leaguehome_path(@league, :sort_by=>"top") %></li>
		<%end%>

	</ul>

</div>