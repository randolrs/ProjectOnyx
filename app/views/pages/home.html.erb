        <%end%>

      </div>

	<div class ="side-panel-content index">

        <div class="content-panel sub">

          <%= render 'pages/top_articles' %>

        </div>

        <div class="content-panel sub">

          <%= render 'pages/featured_tags' %>

        </div>
			
	</div>

 </div>