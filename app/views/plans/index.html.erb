<h1>Listing plans</h1>

<table>
  <thead>
    <tr>
      <th>Stripe</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Credit/Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.stripe_id %></td>
        <td><%= plan.description %></td>
        <td><%= plan.cost %></td>
        <td><%= plan.credit_per_month %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
