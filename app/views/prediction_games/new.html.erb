
<div class = "prediction-game-new">

	<h1><%=@game.league%> Game Prediction</h1>

    <ul>
    <li role="presentation" class="game-detail dropdown">
      <a href="#" class="dropdown-toggle game-detail-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Game Details</a>
      <ul class="dropdown-menu" role="menu">
        <li><a><b>Date:</b> <%= @game.event_time.strftime("%D") %></a></li>
