        <li><a><b>Home Team:</b> <%= @game.teamh%></a></li>
        <li><a><b>Away Team:</b> <%= @game.teama%></a></li>
        <li><a><b>Venue:</b> <%= @game.event_venue%></a></li>
        <li><a><b>City:</b> <%= @game.event_city%></a></li>
      </ul>
    </li>
  </ul>

	<%#render'games/showgamesheader'%>

	<%= render 'form' %>

</div>
