<% if user_signed_in? %>

  <table class ="prediction-index-fold table">
    <thead>
      <tr>
        <th class="prediction-index-fold-th">Expert</th>
        <th class="prediction-index-fold-th">Active Predictions</th>
        <th class="prediction-index-fold-th">Recent Posts</th>
        <th class="prediction-index-fold-th">Onyx Rating</th>
      </tr>
    </thead>

    <tbody>

      <% if @predictors.count == 0 %>

        <tr class="prediction-table-row">
            <td colspan="4" class="no-active-games">No Experts</td>
        </tr>

      <% else %>

      <% c = 0 %>
      
      <% until @predictors[c].nil? %>
        <% predictor = @predictors[c]%>
          <tr data-link="<%=predictordashboard_path(predictor[:username])%>", class="prediction-table-row" class="prediction-table-row">
            <td class="prediction-index-predictor"> <%= image_tag predictor[:image].url(:medium), class: "predictor-image-tiny"%> <a class="index-float"><b><%= predictor[:username] %></b></a></td>
            <td><%= predictor[:prediction_count] %></td>
            <td><%= predictor[:prediction_count] %></td>
            <td><%= "88" %></td>
          </tr>

        <% c = c+1 %>
      <% end %>

      <%end%>

    </tbody>

</table>

<% end %>