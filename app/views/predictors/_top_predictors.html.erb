<% @top_predictors = Predictor.all.order("created_at DESC").limit(3) %>

<div class="user-dashboard-recommendations">

	<h4>Top <%= @league %> Experts</h4>

	 <table class="user-dashboard-table">

	  <% @top_predictors.each do |predictor|%>
	  	<tr data-link="<%=predictordashboard_path(predictor.username)%>", class="table-cta-hover">
	  		<td>
	  			<%= image_tag predictor.image.url(:medium), class: "predictor-image-tiny"%> <a class="index-float"><b><%= predictor.username %></b></a>
	  		</td>

	  	</tr>

	  <%end%>

	</table>

</div>