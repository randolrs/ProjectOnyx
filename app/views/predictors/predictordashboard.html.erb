<script>
    $(document).ready(function(){
    	$("#recent").addClass("active");
    });
</script>

<%= render 'predictors/predictorcover' %>

<%= render 'predictors/predictorcover_sub' %>

<%# render 'layouts/header_sub' %>

<div class="user-dashboard-wrap">

	<div class ="user-dashboard-container">

		<div class ="user-dashboard-card">

			<%= render 'prediction_games/predictor_top_prediction_games'%>

			<%= render 'prediction_games/predictor_rating_distribution' %>

			<%= render 'layouts/footer_float'%>

		</div>

		<div class ="user-dashboard-predictions">

			<%# render 'predictors/predictor_dashboard_prediction_nav' %>


			<div id="divRecentIndex">
				<%# @predictions_recent %>
        		<%# render 'prediction_games/indexshow' %>

				<% if @predictions_recent.empty? %>

					<div class ="prediction-game-index-show empty">

							Your dashboard is currently empty.  Follow or subscribe to experts you find interesting to see their predictions in your dashboard.      

	  				</div>

				<%else%>

					<% @predictions_recent.each do |hash| %>

						<% @prediction = hash[:prediction] %>

						<% @predictor = hash[:predictor] %>

						<% @game = hash[:game] %>

        				<%= render 'prediction_games/list_show' %>

        			<%end%>

        		<%end%>

			</div>

<!-- 			<div id="divUpcomingIndex" style="display: none;">
				<%# @predictions = @predictions_upcoming %>
				<%# render 'prediction_games/indexshow' %>
			</div> -->

			<div id="divTopIndex" style="display: none;">
				<% @predictions = @predictions_top %>
				<%= render 'prediction_games/indexshow' %>
			</div>

	    	<%# render 'prediction_games/indexshow'%>

		</div>

	  </div>

</div>
