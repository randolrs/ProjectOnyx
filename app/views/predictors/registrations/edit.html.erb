
<div class = "content-container">

  <div class="predictor-panel">
    <%= render 'predictors/predictorcard' %>
  </div>

  <div class="content-panel">

    <h2>Overview</h2>

    <div class ="summary-header">
      <table class ="prediction-index-summary">
        <thead>
          <tr>
            <th class="prediction-index-summary-th">Posts</th>
            <th class="prediction-index-summary-th">Predictions</th>
            <th class="prediction-index-summary-th">Fans</th>
          </tr>
        </thead>

        <tbody>
          <tr class="prediction-summary-table-row" href="/">
            <td><%= @predictor.articles.count %></td>
            <td><%= @predictor.prediction_games.count %></td>
            <td>90001</td>
          </tr>  
        </tbody>

      </table>
    </div>

    <div class ="article-title-header">
      <h3>Recent Posts</h3>
      <h5><%= link_to "Full Archive »", predictorindexarticlessall_path %></h5>
    </div>

    <div class="article-index-dashboard">
      <%= render 'predictorarticlesummary'%>
    </div>
    

    <div class ="prediction-title-header">
      <h3>Recent Predictions</h3>
      <h5><%= link_to "Full Archive »", predictorindexpredictionsall_path %></h5>

      <%= render 'predictorpredictionssummary'%>
    </div>

    <nav>
      <div class="center">
        <%# will_paginate @predictions, renderer: BootstrapPagination::Rails %>
      </div>
    </nav>
    
  </div>
  
</div>



<div class = "predictor-edit-registration">

  <div class = "predictor-edit-registration-container">

    <%= render 'predictors/predictorcard_short' %>

    <div class = "predictor-edit-form">

      <div class = "header-inner">
        <h3>Edit Profile</h3>
        <h4>Change your basic profile settings</h4>
      </div>

      <div class ="predictor-edit-basic">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email %>
          <%= f.email_field :email %></div>

          <div><%= f.label :name %>
          <%= f.text_field :name %></div>

          <div><%= f.label :username %>
          <%= f.text_field :username %></div>

          <p> Profile Image </p>
          <%= image_tag current_predictor.image.url(:medium, :width => 50, :height => 50), class: "predictor-image-small"%>
          <br>
          <%= f.file_field :image, class: "form-control" %>

      </div>

      <div class = "predictor-edit-confirm">

        <h3>Confirm Update</h3>

        <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %></div>

        <div><%= f.submit "Update" %></div>

      </div>

    <% end %>

      <div class = "predictor-edit-cancel">
        <h3>Cancel my account</h3>

        <%#button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'predictor-delete-button' %>

      </div>

    </div>

  </div>
</div>
