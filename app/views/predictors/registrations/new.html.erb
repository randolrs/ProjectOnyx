<div class = "signup-container">

	<div class = "signup-form">

		<h1>Sign Up</h1>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

				<div>
					<%= f.text_field :username, placeholder: "Username", pattern: /\A[a-zA-Z0-9 ]*\z/, class: "signup-text"  %>
				</div>

				<div>
				  <%= f.email_field :email, placeholder: "Email", class: "signup-text"  %>
				</div>

				<div>
				    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "signup-text" %>
				</div>

			  <!-- <div><%# f.label :password_confirmation %>
			    	<%# f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "signup-text" %></div> -->

			  	<div><%= f.submit "CREATE ACCOUNT", class: "signup-submit" %></div>

			  	<p class="terms-of-service">By registering your account, you agree to our Terms of Service and the  <a href:"https://stripe.com/connect/account-terms">Stripe Connected Account Agreement</a></p>

			<% end %>

		</div>

	</div>

<div class ="signup-extras">
	Already have an account? <%= link_to "Login", new_predictor_session_path, class: "signin-text-extra" %>
</div>