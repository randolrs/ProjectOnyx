
<div class = "console-container">

	<div class = "signin-container">

		<div class = "signin-form">

			<h2>Predictor Login</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, autofocus: true, placeholder: "you@example.com", class: "signin-text" %></div>

			  <div><%= f.label :password %><br />
			    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "signin-text"  %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>

			  <div><%= f.submit "SIGN IN", class: "signin-submit" %></div>
			<% end %>

		</div>

	</div>

	<div class ="signin-extras">
		See Pricing to <%= link_to "Become an Onyx Predictor", predictorpricing_path, class: "extra-text" %> <br>
		-OR- Just want a free user account? <%= link_to "Signup as a [user]", new_user_registration_path, class: "signin-text-extra" %> <br>
	</div>

</div>