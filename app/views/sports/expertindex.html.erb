<script>
    $(document).ready(function(){
      $("#experts").addClass("active");
    });
</script>

<%= render 'sports/sportshowcover' %>

<div class="content-panel-wrap">

	<div class="content-panel">

	  <div class="content-panel-container">
	    
	    <h1><%=@league%> Experts</h1>

	    <div class="large-table-container">

	    	<table class="game-schedule-table">

				<thead>
					<tr class="game-table-header">
						<th>EXPERT</th>
						<th style="text-align:center;"><%=@league%> PREDICTIONS</th>
						<th style="text-align:center;"><%=@league%> RATING</th>
					</tr>
				</thead>

				<tbody>
					
					<% @experts.each do |expert| %>
						
						<tr data-link="<%= predictordashboard_path(expert.username)%>" class="game-table-row">
							<td><%= image_tag expert.image.url(:medium), class: "predictor-image-tiny"%><%= expert.username %></td>
							<td style="text-align:center;"><%= expert.league_predictions(@league).count %></td>
							<td style="text-align:center;"><%=expert.sport_predictions_rating(@league)%></td>
						</tr>

					<%end%>

				</tbody>

			</table>

	    </div>

	  </div>

	</div>

</div>