<h1>Listing sports</h1>

<table>
  <thead>
    <tr>
      <th>Subcat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.subcat %></td>
        <td><%= link_to 'Show', sport %></td>
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>

        <td> <%= link_to 'Teams', sport %> <td>

        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Team Dash', teams_path %>

<%= link_to 'Game Dash', games_path %>

<%= link_to 'New Sport', new_sport_path %>
