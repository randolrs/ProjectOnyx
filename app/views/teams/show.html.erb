<%= render 'pages/league_home_header' %>

<div class = "content-container">

  <%= image_tag @team.image.url(:medium, :width => 50, :height => 50), class: "predictor-image-small" %>  <h3><%= @team.name %></h3>

  <div class ="article-title-header">
    <h3>Upcoming <%= @team.name %> Games</h3>
    <div class="article-index-dashboard">
      <%= render 'teams/gamesummarydashboard'%>
    </div>
  </div>

  <div class="article-title-header">
    <h3>Popular <%= @team.name %> Posts</h3>
    <h5><%# link_to "Full Archive »", teamindexarticlesall_path %></h5>
    <%= render 'predictors/predictorarticlesummary'%>
  </div>
  

  <div class ="article-title-header">
    <h3>Recent <%= @team.name %> Picks</h3>
    <h5><%= link_to "Full Archive »", teamindexpredictionsall_path(@team.league,@team.id) %></h5>
    <h5><%# link_to "Full Archive »", predictorindexpredictionsall_path %></h5>

    <%= render 'pages/league_home_predictions'%>
  </div>

  <nav>
    <div class="center">
      <%# will_paginate @predictions, renderer: BootstrapPagination::Rails %>
    </div>
  </nav>
  
</div>