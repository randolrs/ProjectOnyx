<h1>Listing topic_copies</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topic_copies.each do |topic_copy| %>
      <tr>
        <td><%= Topic.find(topic_copy.topic_id).name %></td>
        <td><%= link_to 'Show', topic_copy %></td>
        <td><%= link_to 'Edit', edit_topic_copy_path(topic_copy) %></td>
        <td><%= link_to 'Destroy', topic_copy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic copy', new_topic_copy_path %>
